
@{
    ViewData["Title"] = "ExportSpecificTicket";
}

<h1>Export Specific Tickets</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="ExportSpecificTicketConfirm" method="post">
            
            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                <input type="radio" class="btn-check m-1" value="Action" name="genreSelected" id="btnradio1" autocomplete="off" checked>
                <label class="btn btn-outline-primary"  for="btnradio1">Action</label>

                <input type="radio" class="btn-check m-1" value="Horror" name="genreSelected" id="btnradio2" autocomplete="off">
                <label class="btn btn-outline-primary" for="btnradio2">Horror</label>

                <input type="radio" class="btn-check m-1" value="Comedy" name="genreSelected" id="btnradio3" autocomplete="off">
                <label class="btn btn-outline-primary" for="btnradio3">Comedy</label>
            </div>
         
            <div class="form-group">
                <input type="submit" value="Export Tickets" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

