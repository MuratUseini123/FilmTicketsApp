@{
}


@model List<TicketOrder>



<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-uppercase mb-0">Manage Ticket Orders here</h5>
                </div>
                <div class="table-responsive">
                    <table class="table no-wrap user-table mb-0">
                        <thead>
                            <tr>
                                <th scope="col" class="border-0 text-uppercase font-medium pl-4">#</th>
                                <th scope="col" class="border-0 text-uppercase font-medium">Customer Details</th>
                                <th scope="col" class="border-0 text-uppercase font-medium">Number of products</th>
                                <th scope="col" class="border-0 text-uppercase font-medium"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int count = 1;}
                            @if (Model.Count == 0)
                            {
                                <tr>
                                    <td colspan="5">No active Ticket Orders</td>
                                </tr>
                            }
                            else
                            {
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    var ticket = Model[i];

                                    <tr>
                                        <th scope="row">@(i + 1)</th>
                                        <td>@ticket.OrderedBy.UserName</td>
                                        <td>@ticket.FilmTicketsInOrder.Count</td>

                                        <td>
                                            <a class="btn btn-secondary" href="/Order/GetTicketDetails/@ticket.id">Details</a>
                                            <a class="btn btn-success" href="/Order/SaveTicketOrderPDF/@ticket.id">Create Invoice</a>

                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>